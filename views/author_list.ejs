<%- include('./layout.ejs', {title: title }) %>

<div class="container-fluid">
    <div class="row">
      <div class="col-sm-2"><%- include('./sidebar.ejs') %></div>
  
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <% if (author_list.length) { %>
            <ul>
                <% author_list.forEach(author => { %>
                    <li>
                        <a href=<%= author.url %>><%= author.name %></a> | <%= author.date_of_birth_formatted %> - <%= author.date_of_death_formatted %>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>There are no books</p>
        <% } %>
    </div>
    </div>
  </div>
  
  
  


