<%- include('./layout.ejs', {title: title }) %>

<div class="container-fluid">
    <div class="row">
      <div class="col-sm-2"><%- include('./sidebar.ejs') %></div>
  
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <form method="POST">
            <div class="form-group">
                <label for="name">Genre:</label>
                <input id='name' class="form-control" type='text' placeholder='Fantasy, Poetry etc.' name='name' required value="<%= (typeof genre !== 'undefined' ? genre.name : '') %>" />
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li>
                        <%= error.msg %>
                    </li>
                <% }); %>
            </ul>
        <% } %>

    </div>
    </div>
  </div>
  
  
  


