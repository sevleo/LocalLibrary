<%- include('./layout.ejs', {title: title }) %>

<div class="container-fluid">
    <div class="row">
      <div class="col-sm-2"><%- include('./sidebar.ejs') %></div>
  
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <p><%=book.title%></p>
        <% if (book_instances.length) { %>
            <p><strong>Delete the following instances before attempting to delete this book.</strong></p>
            <div style="margin-left:20px;margin-top:20px">
                <h4>Instances</h4>
                <dl>
                    <% book_instances.forEach(book => { %>
                        <dt>
                            <a href=<%=book.url %>><%=book._id %></a>
                        </dt>
                    <% }) %>
                </dl>
            </div>
        <% } else { %>
            <p>
                Do you really want to delete this Book?
            </p>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" name="bookid" value="<%=book._id%>" id="bookid" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        <% } %>

    </div>
    </div>
  </div>
  
  
  


