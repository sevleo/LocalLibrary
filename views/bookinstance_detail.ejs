<%- include('./layout.ejs', {title: title }) %>

<div class="container-fluid">
    <div class="row">
      <div class="col-sm-2"><%- include('./sidebar.ejs') %></div>
  
      <div class="col-sm-10">
        <h1><%= bookinstance._id %></h1>
        <p>
            <strong>Title:</strong>
            <a href=<%= bookinstance.book.url%>><%= bookinstance.book.title %></a>
        </p>
        <p>
            <strong>Imprint:</strong>
            <%= bookinstance.imprint %>
        </p>
        <p>
            <strong>Status:</strong>
            <% if (bookinstance.status == 'Available') { %>
            <span class="text-success"><%=bookinstance.status %></span>
            <% } else if (bookinstance.status == 'Maintenance') { %>
            <span class="text-danger"><%=bookinstance.status %></span>
            <% } else { %>
            <span class="text-warning"><%=bookinstance.status %></span>
            <% } %>
        </p>

        <% if (bookinstance.status!='Available') { %>
            <p>
                <strong>Due back:</strong>
                <%= bookinstance.due_back_formatted %>
            </p>
        <% } %>
        <hr>
        <p><a href=<%= bookinstance.url+'/delete' %>>Delete instance</a></p>
        <p><a href=<%= bookinstance.url+'/update' %>>Update instance</a></p>


    </div>
    </div>
  </div>
  
  
  


