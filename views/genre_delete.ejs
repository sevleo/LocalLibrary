<%- include('./layout.ejs', {title: title }) %>

<div class="container-fluid">
    <div class="row">
      <div class="col-sm-2"><%- include('./sidebar.ejs') %></div>
  
      <div class="col-sm-10">
        <h1><%= title %></h1>
        <% if (genre_books.length) { %>
            <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
            <div style="margin-left:20px;margin-top:20px">
                <h4>Books</h4>
                <dl>
                    <% genre_books.forEach(book => { %>
                        <dt>
                            <a href=<%=book.url %>><%=book.title %></a>
                        </dt>
                        <dt>
                            <%=book.summary%>
                        </dt>
                    <% }) %>
                </dl>
            </div>
        <% } else { %>
            <p>
                Do you really want to delete this Genre?
            </p>

            <form method="post">
                <div class="form-group">
                    <input type="hidden" name="genreid" value="<%=genre._id%>" id="genreid" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
        <% } %>
        

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li>
                        <%= error.msg %>
                    </li>
                <% }); %>
            </ul>
        <% } %>

    </div>
    </div>
  </div>
  
  
  


